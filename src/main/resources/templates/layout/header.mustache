                <a href="/logout" class="btn btn-info active" role="button">로그아웃</a>
            {{/userName}}
            {{^userName}}
                <a href="/oauth2/authorization/google" class="btn btn-success active"
                   role="button">Google Login</a>
                <a href="/oauth2/authorization/naver" class="btn btn-secondary active"
                   role="button">Naver Login</a>
                <a href="/auth/login" role="button" class="btn btn-outline-dark bi bi-lock-fill">회원 로그인</a>
                <a href="/auth/join" role="button" class="btn btn-outline-dark bi bi-person-circle">회원가입</a>
            {{/userName}}
    </div>
